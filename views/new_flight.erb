<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-base font-semibold leading-6 text-gray-900">Flight Information</h1>
  </div>
</div>

<div class="mt-6 border-y-4 border-gray-100">
  <form action="/flight/new" method="POST">
    <dl class="divide-y-2 divide-gray-100">
      
      <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-4 sm:px-0">
        <dt class="text-sm font-semibold leading-6 text-gray-900">Origin</dt>
        <dd class="mt-1 flex font-semibold text-sm leading-6 text-gray-700 sm:col-span-4 sm:mt-0">
          <span class="flex-grow">Destination</span>
          <span class="flex-grow">Departure Date</span>
          <span class="flex-grow">Return Date</span>
          <span>
        </span>
        </dd>
      </div>

      <div class="px-4 py-6 sm:grid sm:grid-cols-5 sm:gap-4 sm:px-0">
        <dt class="text-sm font-semibold leading-6 text-gray-900">
        <div>
          <select id="origin" name="origin" class="block w-min rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
            <option value=""> <%= params[:origin] || 'Select an origin' %> </option>
            <% airport_options.each do |airport| %>
              <option value="<%= airport['country_city_airport'] %>"><%= airport['country_city_airport'] %></option>
            <% end %>
          </select>
        </div>
        </dt>
        <dd class="mt-1 flex font-semibold text-sm leading-6 text-gray-700 sm:col-span-4 sm:mt-0">
          <span class="flex-grow">
            <select id="desitination" name="destination" class="block w-min rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
              <option value=""> <%= params[:destination] || 'Select a destination' %> </option>
              <% airport_options.each do |airport| %>
                <option value="<%= airport['country_city_airport'] %>"><%= airport['country_city_airport'] %></option>
              <% end %>
            </select>
          </span>
          <span class="flex-grow">
          <input type="date" id="departure_date" name="departure_date" value=<%= params[:departure_date] || flight_dates[0] %> class="block w-min rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
          </span>
          <span class="flex-grow">
            <input type="date" id="return_date" name="return_date" value=<%= params[:return_date] || flight_dates[1] %> class="block w-min rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
          </span>
          <span>
            <button type="submit" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
              Add flight
            </button>
          </span>
        </dd>
      </div>

    </dl>
  </form>
</div>